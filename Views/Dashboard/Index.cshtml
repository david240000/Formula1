@{
}
<a href="@Url.Action("Create", "Dashboard")" class="btn btn-sm btn-success">
  <i class="fa fa-plus"></i> Create Rating
</a>


<div class="album py-5 bg-light">
        <div class="container">
          <div class="row">
              @foreach(var item in Model){
            <div class="col-md-4">
              <div class="card mb-4 box-shadow">
                <img class="card-img-top" src="@item.Driver.Image" width="100%" height="225" alt="Card image cap">
                <div class="card-body">
                  <p class="card-text">@item.Race.Name</p>
                  <div class="d-flex justify-content-between align-items-center">
                    <div class="btn-group">
                      <a type="btn btn-success" asp-controller="dashboard" asp-action="Detail" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">View</a>
                        <a type="btn btn-success" asp-controller="dashboard" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Edit</a>
                        <a type="btn btn-success" asp-controller="dashboard" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Delete</a>
                    </div>
                    <small class="text-muted">@item.RatingValue</small>
                  </div>
                </div>
              </div>
            </div>}
         
          </div>
        </div>
      </div>