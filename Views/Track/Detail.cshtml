@{
}

<!-- Page Content -->
<div class="container">

    <!-- Portfolio Item Heading -->
    <h1 class="my-4">@Model.Name
      <small>@Model.Lenght KM</small>
    </h1>
  
    <!-- Portfolio Item Row -->
    <div class="row">
  
      <div class="col-md-8">
        <img class="img-fluid bg-danger" src="@Model.Image" width="100%" height="100%"alt="">
      </div>
  
      <div class="col-md-4">
        <h3 class="my-3">@Model.Name</h3>
        <p>@Model.Lenght Km</p>
        <h3 class="my-3">Location</h3>
       <ul>
          <li>@Model.Nationality.Country</li>
          <li><img class="img-fluid border border-dark" src="@Model.Nationality.Flag" alt=""></li>
        </ul>
      </div>
  
    </div>
    <!-- /.row -->
  
  </div>
  <!-- /.container -->